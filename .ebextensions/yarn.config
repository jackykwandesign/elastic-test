commands:
  01_install_node:
    command: |
      sudo curl --silent --location https://rpm.nodesource.com/setup_16.x | sudo bash -
      sudo yum -y install nodejs
  02_install_yarn:
    test: '[ ! -f /usr/bin/yarn ] && echo "Yarn not found, installing..."'
    command: |
      sudo corepack enable
      
container_commands:
  01_run_yarn:
    command: |
      yarn install
      yarn start:prod